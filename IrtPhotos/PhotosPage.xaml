<Page
    x:Class="IrtPhotos.PhotosPage"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IrtPhotos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    mc:Ignorable="d">

    <Grid  Name="BackgroundGrid" >
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/irtBackground.jpg"/>
        </Grid.Background>

        <Button Name="AddImage1" 
                Content="Add image 1" 
                Click="AddImage1_Click" 
                Margin="10,100,0,120"/>

        <Button Name="AddImage2" 
                Content="Add image 2" 
                Click="AddImage2_Click" 
                Margin="10,260,0,120"/>

        <Button Name="AddImage3" 
                Content="Add image 3" 
                Click="AddImage3_Click" 
                Margin="10,420,0,120"/>

       

    </Grid>
</Page>
